{
  "compilerOptions": {
    "declaration": true,
    "isolatedModules": false,
    "noEmit": false,
    "allowJs": false,
    "emitDeclarationOnly": true,
    "declarationDir": "dist",
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "baseUrl": "src",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "paths": {
      "@/*": ["*"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*", "node_modules/@atom/common"],
  "exclude": ["node_modules"]
}
